<div class="relative">
    <video autoplay muted loop id="hero-video" class="-z-10 w-full object-cover h-[500px]">
        <source src="/hero.mp4" type="video/mp4">
    </video>
    <section class="flex items-center justify-center w-full py-12 md:py-24 lg:py-32 xl:py-48 pt-20 absolute top-0 left-0 hero-bg h-[500px]">
        <div class="container px-4 md:px-6">
            <div class="flex flex-col items-center space-y-4 text-center">
                <div class="space-y-2">
                    <h1 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl lg:text-6xl/none text-white">
                        Guarda cada momento de tus eventos con Memoroo
                    </h1>
                    <p class="mx-auto max-w-[700px] text-gray-300 md:text-xl">
